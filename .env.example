# Rocket.Chat Configuration
ROCKETCHAT_URL=http://localhost:3000
ROCKETCHAT_USER=bot_user
ROCKETCHAT_PASSWORD=your_bot_password
ROCKETCHAT_ROOM=general
ROCKETCHAT_INTEGRATION_ID=hubot
ROCKETCHAT_BOT_NAME=hubot
RESPOND_TO_DM=true
RESPOND_TO_EDITED=false

# Hubot Configuration
HUBOT_NAME=hubot
PORT=3001
HUBOT_LOG_LEVEL=info
NODE_ENV=production

# AI Configuration (DeepSeek)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
AI_MAX_TOKENS=1000

# Optional: Rate Limiting & Performance
CACHE_TTL_MINUTES=30
MAX_REQUESTS_PER_MINUTE=10

# Development/Debug
DEBUG=false
VERBOSE_LOGGING=false
